FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    oracledb \
    numpy \
    scikit-learn \
    requests \
    jinja2 \
    aiohttp

# Copy application code
COPY main.py seeder.py init.sql verify_data.py /app/
COPY templates/ /app/templates/

# Expose port
EXPOSE 8000

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
